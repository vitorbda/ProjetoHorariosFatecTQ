@model List<HorariosModel>

@{
    int seg = 0, ter = 0, quar = 0, quin = 0, sex = 0, sab = 0;
    bool Verificar = false;
}

@if (Model == null || Model.Count == 0){
    <br />
   <h1 class="display-4">Nenhum registro encontrado</h1> 
}
else {

@foreach (var menu in Model)
{
    seg++;
    if (seg <= 1){
        <br />
        <h1 class="display-4">Segunda-Feira</h1>
    }
}
<table class="display" style="width: 100%">
    <thead>
        <tr>
            <th scope="col">Curso</th>
            <th scope="col">Aula</th>
            <th scope="col">Sala</th>
            <th scope="col">Bloco</th>
            <th scope="col">Horario</th>
        </tr>
    </thead>
    <tbody>
        @{
         Verificar = false;}
        @if(Model != null && Model.Any()){
            @foreach (var item in Model)
            {
                if (item.IdDia == ProjetoHorariosFatec.Enums.DiaEnum.Segunda)
                {
                    Verificar = true;
                    <tr>
                        <td id="Curso">
                        @(item.IdCurso == ProjetoHorariosFatec.Enums.CursoEnum.AdsNoite ? "ADS Noite" : "")
                        @(item.IdCurso == ProjetoHorariosFatec.Enums.CursoEnum.AdsTarde ? "ADS Tarde" : "")
                        @(item.IdCurso == ProjetoHorariosFatec.Enums.CursoEnum.AgroNoite ? "Agro Noite" : "")
                        @(item.IdCurso == ProjetoHorariosFatec.Enums.CursoEnum.AgroTarde ? "Agro Tarde" : "")
                        @(item.IdCurso == ProjetoHorariosFatec.Enums.CursoEnum.ProdNoite ? "PI Noite" : "")
                        @(item.IdCurso == ProjetoHorariosFatec.Enums.CursoEnum.ProdManha ? "PI Manhã" : "")
                        @(item.IdCurso == ProjetoHorariosFatec.Enums.CursoEnum.SiManha ? "SI Noite" : "")
                    </td>
                    <td>@item.Aula</td>
                    <td>@item.Sala</td>
                    <td>
                        @(item.Bloco == ProjetoHorariosFatec.Enums.BlocoEnum.BlocoA1 ? "Bloco A1" : "")
                        @(item.Bloco == ProjetoHorariosFatec.Enums.BlocoEnum.BlocoA2 ? "Bloco A2" : "")
                    </td>
                    <td>@item.Horario</td>
                </tr>
                }
            }
            if (Verificar == false)
            {
                <tr class="odd"><td valign="top" colspan="5">Nenhum registro encontrado</td></tr>
            }
        }       
    </tbody>
</table><!--    SEGUNDA FEIRA  -->

